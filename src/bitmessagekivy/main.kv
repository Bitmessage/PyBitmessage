        pos_hint: {"top": 1}
        md_bg_color: app.theme_cls.primary_color
        elevation: 10
        left_action_items: [['menu', lambda x: nav_drawer.set_state("toggle")]]
        right_action_items: [['account-plus', lambda x: app.addingtoaddressbook()]]

    ScreenManager:
